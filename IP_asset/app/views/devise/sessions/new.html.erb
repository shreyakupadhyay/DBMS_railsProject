        <!-- Register -->
        <div class="lc-block" id="l-register">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <table>
            <tr><td> 
            <label><center>
               <span>
                <%= f.label :Membership %></br>
                <%= f.collection_radio_buttons(:user_type, [["1","faculty  "],["2","collaborator  "],["3","student  "]], :first, :last, {}, { class:"mdl-radio mdl-js-radio"} ) %>     

                </span>
                </center>
            </label>
            </td>
            </tr>
            </table>
          
            <div class="input-group m-b-20">
                <span class="input-group-addon"><i class="zmdi zmdi-email"></i></span>
                <div class="fg-line" type="text" class="form-control" placeholder="Email Address">
                    <%= label_tag("Email") %>
                    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                </div>
            </div>
            
            <div class="input-group m-b-20">
                <span class="input-group-addon"><i class="zmdi zmdi-male"></i></span>
                <div class="fg-line" type="password" class="form-control" placeholder="Password">
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                    <%= label_tag("Password") %>
                    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                </div>
            </div>
            
            <div class="input-group m-b-20">
                <span class="input-group-addon"><i class="zmdi zmdi-male"></i></span>
                <div class="fg-line" type="password" class="form-control" placeholder="Password">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
                </div>
            </div>

            <div class="clearfix"></div>
            
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="">
                    <i class="input-helper"></i>
                    Accept the license agreement
                </label>
            </div>
            
            <!--<div href="" class="btn btn-login btn-danger btn-float"><i class="zmdi zmdi-arrow-forward"></i></div>-->
            <div class="btn btn-login btn-danger btn-float">
                <%= f.submit :class => 'btn-float zmdi zmdi-arrow-forward'%>
            </div>
            
            <ul class="login-navigation">
                <li data-block="#l-login" class="bgm-green">Login</li>
                <li data-block="#l-forget-password" class="bgm-orange">Forgot Password?</li>
            </ul>
            <% end %>
        </div>
        
        <!-- Forgot Password -->
        <div class="lc-block" id="l-forget-password">
            <p class="text-left">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla eu risus. Curabitur commodo lorem fringilla enim feugiat commodo sed ac lacus.</p>
            
            <div class="input-group m-b-20">
