<%= form_for(@ipasset, :url => {:controller => 'ipassets', :action => 'create'}) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :attachment %><br>
    <%= f.file_field :attachment %>
  </p>

  <p>
    <%= f.label :filename %><br> 
    <%= f.text_field :filename %>
  </p>

   <!-- <p><strong>stakes:</strong></p>

    <%= f.fields_for :stakeholders do |stakeholder| %>
      <div>
        <%= stakeholder.label :Stakeholder %>
        <%= stakeholder.text_field :stakeholderid %>

        <%= stakeholder.label :Stakes %>
        <%= stakeholder.text_field :stakespercent %>
      </div>
    <% end %> -->

  <p><strong>StakeHolders:</strong></p>
    <div id="stakeholders">
      <%= f.fields_for :stakeholders do |stake| %>
        <div class="nested-fields">
        <% if stake.object.stakeholderid == current_user.id %>
          <%= stake.label :stakeholderid %><br>
          <%= stake.hidden_field :stakeholderid, value: current_user.id %><br>


          <%= stake.label :stakespercent %><br>
          <%= stake.text_field :stakespercent %><br>
        </div>
        <% else %>
        <%= render 'stakeholder_fields', :f => stake %>
        <% end %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add stake', f, :stakeholders %>
      </div>
    </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>