<%= form_for(:signup, :url => {:controller => 'welcome', :action => 'signup'}) do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>
 
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
 
  <p>
    <%= f.submit :Register %>
  </p>
<% end %>